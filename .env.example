# TalkBridge Environment Configuration
# Copy this file to .env and modify as needed

# === APPLICATION SETTINGS ===
APP_ENV=development
DEBUG=false
LOG_LEVEL=INFO

# === DOMAIN & SECURITY ===
DOMAIN=localhost
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:8501,http://127.0.0.1:8501

# === STREAMLIT SPECIFIC ===
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_ENABLE_CORS=false
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=true
STREAMLIT_SERVER_MAX_UPLOAD_SIZE=200
STREAMLIT_SERVER_MAX_MESSAGE_SIZE=200

# === OLLAMA CONFIGURATION ===
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=deepseek-r1:latest

# === WHISPER CONFIGURATION ===
WHISPER_MODEL_NAME=DeepSeek R1 0528 Qwen3 8B

# === AUDIO SETTINGS ===
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1

# === PATHS ===
DATA_PATH=./data
LOGS_PATH=./logs
TEMP_PATH=/tmp/talkbridge

# === AUTHENTICATION (SECURITY CRITICAL) ===
# Secret pepper for password hashing - GENERATE A NEW ONE!
TALKBRIDGE_PEPPER=changeme_generate_secure_random_string
# Set to 'true' for development mode (adds test users)
TALKBRIDGE_DEV_MODE=false
SESSION_TIMEOUT=1800

# === DATABASE (if needed in future) ===
# DATABASE_URL=sqlite:///data/talkbridge.db

# === REDIS (if needed for caching) ===
# REDIS_URL=redis://localhost:6379/0

# === TTS SETTINGS ===
# TTS_MODEL_PATH=./data/models/tts
# TTS_VOICE_CLONING=false

# === TRANSLATION ===
# TRANSLATION_SERVICE=offline
# GOOGLE_TRANSLATE_API_KEY=your-api-key

# === MONITORING ===
# SENTRY_DSN=https://your-sentry-dsn-here
# PROMETHEUS_PORT=9090